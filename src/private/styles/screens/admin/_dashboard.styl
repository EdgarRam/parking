#admin-dashboard



    .last-news
        border 1px solid light-gray4
        margin 0 10px
        margin-bottom 40px
        padding 10px
        background white
        box-shadow: 0 1px 2px 2px light-gray5;



        &.great
            box-shadow 0 1px 2px 1px green2
            margin-bottom 5px



            .title
                background green2
                color white
                border-bottom 0



        .title
            padding 10px 15px
            font-size 18px
            margin -10px -11px 0 -11px
            border-bottom 1px solid light-gray5



    md-content.content-card
        background transparent !important
        padding 0
        margin-top: 5px;



        md-card
            margin 0
            border-radius 0
            border-bottom 1px solid light-gray3




            &:last-child
                border-bottom 0




            md-card-title
                padding 5px 20px




                md-card-title-text



                    span
                        display block



                    .md-headline
                        font-size 16px
                        line-height 26px
                        color light-gray5
                        font-weight 500
                        margin-top: 5px;



                    .md-subhead
                        font-size 12px
                        color light-gray5
                        line-height: normal;



                md-card-title-media
                    margin-top 0
                    margin-right 30px



                    .md-media-sm
                        width 50px
                        height 50px
                        border-radius 50%
                        overflow: hidden;
